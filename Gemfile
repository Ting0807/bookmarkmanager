# Gemfile for this project
source 'https://rubygems.org'

ruby '2.0.0'

gem 'sinatra'
# this is for css, haml's sister
gem 'saas'  
gem 'haml'


# seperate production from development and test , to make the environment clean
group :development, :test do 
	gem 'cucumber'
	gem 'cucumber-sinatra'
	gem 'shotgun'
	gem 'capybara'
	gem 'rspec'
	gem 'data_mapper'
	gem 'dm-postgres-adapter'
	
end


